<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{query}} - Goodgle</title>
  <meta name="Description" content="Goodgle images search page." />
  <link rel="icon" href="/goodgle.svg" sizes="any" type="image/svg+xml">
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <style>
    * {
      outline: 0;
      box-sizing: border-box;
      overflow-wrap: break-word;
      font-family: 'Open Sans', sans-serif;
      --white: hsla(0, 0%, 96%, .98);
      --gray: hsl(0, 0%, 96%);
      --dark: hsla(0, 0%, 10%, .7);
      --darker: hsl(0, 0%, 10%, .9);
      --border: hsl(0, 0%, 60%)
    }

    body {
      margin: 6.5rem 0 0
    }

    body>p {
      width: 90%;
      margin: 0 auto 1.5rem auto;
      color: var(--dark);
      font-weight: 600
    }

    body>p>a {
      color: var(--darker)
    }

    a {
      text-decoration: none
    }

    a:hover {
      text-decoration: underline
    }

    main {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      align-items: center
    }

    main>img {
      margin: .5rem .25rem;
      cursor: pointer;
      max-width: 40%
    }

    aside {
      display: none;
      position: fixed;
      bottom: 0;
      z-index: 1;
      background: var(--gray);
      border-radius: 2.5rem 2.5rem 0 0;
      border: 0.5px var(--border);
      border-style: solid none solid solid;
      padding: 2.5rem 1rem;
      text-align: center;
      width: 100%;
      height: 85vh
    }

    figure {
      border-radius: 1rem;
      border: 0.5px solid var(--border);
      margin: 0 auto;
      width: max-content;
      max-width: 80%
    }

    figure>a>img {
      border-radius: 1rem 1rem 0 0;
      max-width: 100%;
      max-height: 50vh
    }

    figure>a>p {
      color: var(--darker);
      font-weight: 600;
      margin: .5rem 0
    }

    aside>div {
      height: 1rem;
      width: 1rem;
      border: solid var(--darker);
      border-width: 0 0 .2rem .2rem;
      position: absolute;
      top: .25rem;
      left: 50%;
      transform: translateX(-50%) rotate(-45deg);
      cursor: pointer
    }

    @media (min-width: 1024px) {
      body>p {
        width: unset;
        margin: 0 1rem 1.5rem
      }

      main {
        margin: 0 1rem 2rem
      }

      main>img {
        max-width: unset
      }

      aside {
        z-index: unset;
        bottom: unset;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        border-radius: 2.5rem 0 0 2.5rem;
        width: 32.5%;
        height: 75vh
      }

      aside>div {
        top: 50%;
        left: 1rem;
        transform: translateX(-50%) rotate(-135deg)
      }
    }
  </style>
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
  <noscript>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" />
  </noscript>
</head>

<body>
  {{#hasProposition}}
    <p>{{proposition.proposition.text}} <a href="{{proposition.proposition.link}}">{{proposition.proposition.data}}</a>,
      {{proposition.original.text}} <a href="{{proposition.original.link}}">{{query}}</a>
    </p>
  {{/hasProposition}}
  {{{search}}}
  <main>
    {{#IMGs}}
      <img style="background: {{color}}" loading="lazy" decoding="async" src="data:;base64,R0lGODlhAQABAPAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw" alt="{{desc}}" data-original="{{original}}" data-desc="{{desc}}" data-URL="{{URL}}" data-title="{{title}}"></img>
    {{/IMGs}}
  </main>
  <aside></aside>
  {{{menu}}}
  <script>
    //For desktops
    const aspectRatios = {{{ stringedAspectRatio }}}
    let style = document.querySelector('style').innerHTML
    style = style.slice(0, -8)
    aspectRatios.forEach((el, i) => style += `
      main img:nth-child(${i + 1}) {
        height: calc(${el[0]}rem / 17.5);
        width: calc(${el[1]}rem / 17.5)
      }
    `)
    style += '}'

    //Get images
    document.querySelectorAll('img').forEach((el, i) => {
      el.setAttribute('src', {{{ stringedIMGs }}}[i])
    el.style.background = 'none'
    })

    //View full image
    document.querySelectorAll('img').forEach(el => el.addEventListener('mouseup', () => {
      document.querySelector('aside').innerHTML =
        `
        <div></div>
        <figure>
          <a href="${el.getAttribute('data-URL')}">
            <img src="${el.getAttribute('data-original')}" alt="${el.getAttribute('data-desc')}">
            <p>${el.getAttribute('data-title')}</p>
          </a>
        </figure>
        <p>${el.getAttribute('data-desc')}</p>
      `
      document.querySelector('aside').style.display = 'unset'
      if (window.innerWidth >= 1024) document.querySelector('main').style.width = '65%'
      document.querySelector('aside>div').addEventListener('mouseup', () => {
        document.querySelector('aside').style.removeProperty('display')
        document.querySelector('main').style.width = 'unset'
      })
    }))
  </script>
</body>

</html>