<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible"
    content="IE=edge">
  <meta name="viewport"
    content="width=device-width, initial-scale=1.0">
  <title>{{query}} - Goodgle</title>
  <meta name="Description"
    content="Goodgle images search page." />
  <link rel="preconnect"
    href="https://fonts.gstatic.com" />
  <style type="text/css">
    * {
      outline: 0;
      box-sizing: border-box;
      font-family: 'Open Sans', sans-serif;
      --white: #f5f5f5fa;
      --gray: #f5f5f5;
      --dark: hsla(0, 0%, 10%, 0.7);
      --darker: hsl(0, 0%, 10%, 0.9);
      --border: #999999;
    }

    body {
      margin: 6.5rem 0 0;
    }

    a {
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    header {
      top: 1.5rem;
      left: 50%;
      transform: translateX(-50%);
      position: fixed;
      display: flex;
      width: 90%;
      text-align: center;
      border-radius: 100vw;
      box-shadow: 0px 4px 24px rgba(0, 0, 0, 0.14), 0px 2px 12px rgba(0, 0, 0, 0.06);
      height: 3rem;
      background: var(--white);
    }

    #home {
      height: 2rem;
      width: 2rem;
      border: none;
      align-self: center;
      margin-left: 2%;
      cursor: pointer;
      background: url('/goodgle.svg');
    }

    #search-bar {
      border-radius: 100vw;
      border: 0;
      width: 86%;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
      font-size: 1.15rem;
      color: var(--darker);
      font-weight: bold;
      caret-color: var(--darker);
      background: none;
    }

    #search {
      background: url('/search.svg');
      height: 2rem;
      width: 2rem;
      border: 0;
      align-self: center;
      margin-right: 2%;
      cursor: pointer;
    }

    main {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      align-items: center;
    }

    nav {
      bottom: 1.5rem;
      left: 50%;
      transform: translateX(-50%);
      position: fixed;
      display: flex;
      text-align: center;
      border-radius: 100vw;
      box-shadow: 0px 4px 24px rgba(0, 0, 0, 0.14), 0px 2px 12px rgba(0, 0, 0, 0.06);
      height: 3rem;
      background: var(--white);
      padding: 0.5rem;
      width: 90%;
      overflow-x: scroll;
      overflow-y: hidden;
    }

    .menu {
      color: var(--darker);
      align-self: center;
      padding: 0.5rem 1rem;
      border-radius: 100vw;
      font-weight: bold;
      font-size: .75rem;
    }

    .menu:hover {
      text-decoration: none;
      background: var(--dark);
      color: var(--white);
    }

    #current {
      color: var(--white);
      background: var(--dark);
    }

    @media (min-width: 1024px) {
      header {
        width: 40vw;
      }

      main {
        margin: 6.5rem 0 2rem;
      }

      nav {
        width: auto;
        overflow-x: auto;
      }

      .menu {
        font-size: 1rem;
        padding: 0.5rem 1.5rem;
      }
    }
  </style>
  <link rel="preload"
    href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap"
    as="style"
    onload="this.onload=null;this.rel='stylesheet'" />
  <noscript>
    <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" />
  </noscript>
</head>

<body>
  <header>
    <button id="home" aria-label="Home"
      onclick="home()"></button>
    <input type="text" id="search-bar"
      value="{{query}}" />
    <button id="search" aria-label="Search"
      onclick="search()">
      <div></div>
    </button>
  </header>
  <main>
    {{#IMGs}}
      <img
        style="background: {{color}}; height: calc({{height}}rem / 17.5); width: calc({{width}}rem / 17.5)"
        loading="lazy" decoding="async"
        src="data:;base64,R0lGODlhAQABAPAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw"
        alt="{{desc}}"
        data-fullIMG="{{originalIMG}}"
        data-desc="{{desc}}"
        data-URL="{{URL}}"
        data-title="{{title}}">
      </img>
    {{/IMGs}}
  </main>
  <nav>
    <a class="menu" href="&tab=all">All</a>
    <a class="menu" id="current"
      href="&tab=images">Images</a>
    <a class="menu" href="&tab=videos">Videos</a>
    <a class="menu" href="&tab=news">News</a>
    <a class="menu"
      href="&tab=shopping">Shopping</a>
    <a class="menu" href="&tab=books">Books</a>
    <a class="menu" href="&tab=maps">Maps</a>
  </nav>
  <script>
    //Search functionality
    function search() {
      let params = new URLSearchParams(location.search)
      params.set('q', document.querySelector('#search-bar').value.replace(' ', '+'))
      location.search = params.toString()
    }
    document.querySelector('#search-bar').addEventListener('keyup', e => event.keyCode === 13 ? search() : null)

    //TODO: when hover an other menu item then #current "un-hover" the #current element

    //Menu links
    document.querySelectorAll('.menu').forEach(el => el.setAttribute('href', location.search.split('&')[0] + el.getAttribute('href')))

    //Get images
    document.querySelectorAll('img').forEach((el, i) => {
      el.setAttribute('src', {{{ stringedIMGs }}}[i])
      el.style.background = 'none'
    })
  </script>
</body>

</html>